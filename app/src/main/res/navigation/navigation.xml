<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigation"
            app:startDestination="@id/homeFragment"
            xmlns:tools="http://schemas.android.com/tools">

    <fragment android:id="@+id/homeFragment"
              android:name="com.ssc.cafe.home.HomeFragment"
              android:label="HomeFragment"
              tools:layout="@layout/fragment_home"/>

    <fragment android:id="@+id/orderHistoryFragment"
              android:name="com.ssc.cafe.order.OrderHistoryFragment"
              android:label="OrderHistoryFragment"
              tools:layout="@layout/fragment_order_history"/>
    <action
            android:id="@+id/action_global_orderHistoryFragment"
            app:destination="@id/orderHistoryFragment" app:popUpTo="@+id/homeFragment"/>

    <fragment android:id="@+id/productConfirmFragment"
              android:name="com.ssc.cafe.confirm.ProductConfirmFragment"
              android:label="fragment_product_confirm"
              tools:layout="@layout/fragment_product_confirm"/>
    <action android:id="@+id/action_global_productConfirmFragment"
            app:destination="@id/productConfirmFragment" app:popUpTo="@+id/homeFragment"/>

</navigation>